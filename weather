#!/usr/bin/python3

import requests
import os

API_KEY = os.environ.get("WEATHER_API_KEY")
CITY = 6324729


BANNER = """/---------------------/
/ (: 8<D 8<D 8<D :)   /
/ Welcome to WEATHER /
/___________________/"""


def to_c(temp):
    return round(
        temp - 273.15,
        1
    )


def get_data():
    url = "http://api.openweathermap.org/data/2.5/forecast?id={}&appid={}".format(CITY, API_KEY)
    response = requests.get(url)
    return response.json()


def main():
    print(BANNER)

    if not API_KEY:
        print("We couldn't get your Key")
        return

    data = get_data()

    for thing in data['list']:
        print(thing['dt_txt'])
        temp = thing['main']['temp']
        temp_in_c = to_c(temp)
        print('  temp:', temp_in_c)
        print('')


if __name__ == "__main__":
    main()
